{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitReturns": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"allowJs": true,
		/* Врубить после переписи */
		"strict": true,
		"skipLibCheck": true,
		"importsNotUsedAsValues": "error",
		"baseUrl": "src",
		"paths": {
			"@components/*": ["components/*"],
			"@typings/*": ["typings/*"],
			"@lib/*": ["lib/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": [
        "src/**/*"
    ],
}
